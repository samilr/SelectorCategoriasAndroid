<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="370dp"
        android:layout_height="163dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/fondo">

        <CheckBox
            android:id="@+id/cbPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="Persona" />

        <CheckBox
            android:id="@+id/cbCarro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            android:textSize="20dp"
            android:text="Carro" />

        <CheckBox
            android:id="@+id/cbCalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:textSize="20dp"
            android:text="Calle" />

        <CheckBox
            android:id="@+id/cbMusica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:textSize="20dp"
            android:text="Musica" />
    </FrameLayout>

    <Button
        android:id="@+id/btnMostrarImg"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:onClick="isChecked"
        android:text="Mostrar Imagen" />

    <ImageView
        android:id="@+id/imgImagen"
        android:layout_width="344dp"
        android:layout_height="251dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Editar"
        android:onClick="alertDialogEdit"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:id="@+id/btnVerInfo"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="Ver Info"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="220dp"
        android:onClick="alertDialog"/>

</FrameLayout>
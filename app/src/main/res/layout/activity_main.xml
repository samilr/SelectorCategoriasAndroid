<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"

        android:layout_marginTop="20dp"
        android:background="@color/material_dynamic_neutral_variant95">

        <CheckBox
            android:id="@+id/cbPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Persona"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/cbCarro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:text="Carro"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/cbCalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:text="Calle"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/cbMusica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:text="Musica"
            android:textSize="20dp" />
    </FrameLayout>

    <Button
        android:id="@+id/btnMostrarImg"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="200dp"
        android:background="#FB1010"
        android:backgroundTint="#B61818"
        android:onClick="isChecked"
        android:text="Mostrar Imagen" />

    <ImageView
        android:id="@+id/imgImagen"
        android:layout_width="344dp"
        android:layout_height="251dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="550dp"
        android:onClick="alertDialogEdit"
        android:text="Editar" />

    <Button
        android:id="@+id/btnVerInfo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="550dp"
        android:onClick="alertDialog"
        android:text="Ver Info" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="370dp"
        android:layout_height="147dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="140dp"
        app:srcCompat="@drawable/left" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="370dp"
        android:layout_height="147dp"
        android:layout_marginLeft="-110dp"
        android:layout_marginTop="600dp"
        app:srcCompat="@drawable/right" />

</FrameLayout>